@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li>
            <a href="@Url.Action("ChangeCulture", "Home", new { lang = "tr", returnurl = this.Request.RawUrl }, null)">
                <img src="~/images/turkiye-bayrak-yuvarlak-png.png" width="25" height="25" title="Türkçe" />
            </a>
        </li>
        <li>
            <a href="@Url.Action("ChangeCulture", "Home", new { lang = "en", returnurl = this.Request.RawUrl }, null)">
                <img src="~/images/ingiltere-bayrak-yuvarlak-png.png" width="25" height="25" title="English" />
            </a>
        </li> 
        <li>
            @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
        </li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
    </ul>
    }
}
else
{
 <ul class="nav navbar-nav navbar-right">
        <li><a href="@Url.Action("ChangeCulture", "Home", new { lang = "tr", returnurl = this.Request.RawUrl }, null)">
    <img src="~/images/turkiye-bayrak-yuvarlak-png.png" width="25" height="25" title="Türkçe" /></a>
</li>
        <li><a href="@Url.Action("ChangeCulture", "Home", new { lang = "en", returnurl = this.Request.RawUrl }, null)">
    <img src="~/images/ingiltere-bayrak-yuvarlak-png.png" width="25" height="25" title="English" /></a>
</li>    
        <li>@Html.ActionLink(Resources.lang.kayitol, "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink(Resources.lang.girisyap, "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
